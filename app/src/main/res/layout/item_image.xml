<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_image_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    >

    <RelativeLayout
        android:id="@+id/item_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/item_image_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="@string/image_desc"
            />

        <TextView
            android:id="@+id/item_image_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorBlackTitleBackground"
            android:ellipsize="end"
            android:padding="@dimen/item_image_title_padding"
            android:textColor="@android:color/white"
            android:textSize="@dimen/item_image_title_size"
            android:maxLines="1"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
