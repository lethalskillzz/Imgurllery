<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackBackground"
    android:orientation="vertical"
    android:padding="@dimen/details_padding"
    tools:context=".imgurllery.presentation.detail.DetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

            <TextView
                android:id="@+id/details_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/msg_loading"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/details_title_size"
                android:textStyle="bold"
                />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/details_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:contentDescription="@string/image_desc"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/details_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_loading"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/details_date_size"
                    android:textStyle="bold"
                    />


                <TextView
                    android:id="@+id/details_vote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_loading"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/details_score_size"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/details_plot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/msg_loading"
            android:textColor="@color/colorText"
            android:textSize="@dimen/details_desc_size"
            />

    </LinearLayout>

</ScrollView>